<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EPQActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_epq"
                android:textColor="@color/text_white"
                android:textSize="20sp" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_rect" />

        <LinearLayout
            android:id="@+id/ll_epq_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="48dp"
                            android:paddingHorizontal="32dp"
                            android:paddingTop="32dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/title_activity_epq"
                                android:textColor="@color/main_color_dark"
                                android:textSize="40sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:lineSpacingMultiplier="1.5"
                                android:text="@string/epq_introduction"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_big" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/main_color_dark"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/action_start_test"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_big" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_epq_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="32dp">


                        <TextView
                            android:id="@+id/tv_test_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="第0/0题"
                            android:textColor="@color/main_color_dark"
                            android:textSize="@dimen/text_big" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/main_color_dark" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="280dp">

                            <TextView
                                android:id="@+id/tv_test_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="16dp"
                                android:lineSpacingMultiplier="1.5"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_large" />
                        </ScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="16dp"
                            android:background="@color/main_color_dark" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/yes_button"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="@drawable/corner_4dp_btn"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:text="是"
                                android:textColor="@color/text_white"
                                android:textSize="@dimen/text_big" />

                            <View
                                android:layout_width="16dp"
                                android:layout_height="0dp" />

                            <Button
                                android:id="@+id/no_btn"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="@drawable/corner_4dp_btn"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:text="否"
                                android:textColor="@color/text_white"
                                android:textSize="@dimen/text_big" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_epq_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="32dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="32dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="32dp"
                                    android:text="EPQ测试结果"
                                    android:textColor="@color/main_color_dark"
                                    android:textSize="@dimen/text_large" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.mrbattery.encounter.font.FontTextView
                                        android:id="@+id/tv_e_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="e65"
                                        android:textAllCaps="true"
                                        android:textColor="@color/main_color_dark"
                                        android:textSize="40sp" />

                                    <com.mrbattery.encounter.font.FontTextView
                                        android:id="@+id/tv_n_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="n43"
                                        android:textAllCaps="true"
                                        android:textColor="@color/main_color_dark"
                                        android:textSize="40sp" />

                                    <com.mrbattery.encounter.font.FontTextView
                                        android:id="@+id/tv_p_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="p37"
                                        android:textAllCaps="true"
                                        android:textColor="@color/main_color_dark"
                                        android:textSize="40sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="24dp"
                                android:background="@color/main_color_dark" />


                            <TextView
                                android:id="@+id/tv_result_analyse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="16dp"
                                android:lineSpacingMultiplier="1.5"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_big" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </ScrollView>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/main_color_dark"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/action_confirm"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_big" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>